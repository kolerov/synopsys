#! /bin/sh -

echo "[1] hs4 debug of 'test.exe'"
echo "[2] hs5 debug of 'test.exe'"
echo "[3] hs6 debug of 'test.exe'"

read -n 1 -p "what's it gonna be sailor? " reply
echo
choice=${reply:-9}
case ${choice} in
  [1])
    gdbserver.hs4 :1337 test.exe
    ;;
  [2])
    gdbserver.hs5 :1338 test.exe
    ;;
  [3])
    gdbserver.hs6 :1339 test.exe
    ;;
  *)
    ;;
esac
